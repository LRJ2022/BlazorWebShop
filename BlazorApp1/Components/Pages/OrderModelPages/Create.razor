@page "/ordermodels/create"
@inject BlazorApp1.Data.BlazorApp1Context DB
@using MyBlazorShopHosted.Libraries.Shared.Order
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h4>OrderModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="OrderModel" OnValidSubmit="AddOrderModel" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />
            <div class="mb-3">
                <label for="orderid" class="form-label">orderId:</label> 
                <InputText id="orderid" @bind-Value="OrderModel.orderId" class="form-control" /> 
                <ValidationMessage For="() => OrderModel.orderId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/ordermodels">Back to List</a>
</div>

@code {

    [SupplyParameterFromForm]
    public OrderModel OrderModel { get; set; } = new();

    // To protect from overposting attacks, see https://aka.ms/RazorPagesCRUD
    public async Task AddOrderModel()
    {
        DB.SXOrderId.Add(OrderModel);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/ordermodels");
    }
}
