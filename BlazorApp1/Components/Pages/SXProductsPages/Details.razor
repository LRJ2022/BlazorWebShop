@page "/sxproducts/details"
@inject BlazorApp1.Data.BlazorApp1Context DB
@using MyBlazorShopHosted.Libraries.Shared.Milk.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>SXProducts</h4>
    <hr />
    @if (sxproducts is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@sxproducts.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@sxproducts.Description</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@sxproducts.Price</dd>
            <dt class="col-sm-2">Picture</dt>
            <dd class="col-sm-10">@sxproducts.Picture</dd>
        </dl>
        <div>
            <a href="@($"/sxproducts/edit?id={sxproducts.Id}")">Edit</a> |
            <a href="@($"/sxproducts")">Back to List</a>
        </div>
    }
</div>

@code {
    SXProducts? sxproducts;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        sxproducts = await DB.SXProducts.FirstOrDefaultAsync(m => m.Id == Id);

        if (sxproducts is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
